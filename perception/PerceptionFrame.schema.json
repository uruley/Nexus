{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PerceptionFrame",
  "type": "object",
  "required": ["ts", "persons"],
  "properties": {
    "ts": { "type": "number", "description": "Unix ms" },
    "size": {
      "type": "array",
      "items": { "type": "integer" },
      "minItems": 2,
      "maxItems": 2
    },
    "depth": {
      "type": "object",
      "required": ["format", "uri"],
      "properties": {
        "format": { "type": "string", "enum": ["png16", "r32"] },
        "uri": { "type": "string", "description": "data URL or http(s):// or file://" }
      }
    },
    "persons": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["score", "bbox", "keypoints"],
        "properties": {
          "id": { "type": "string" },
          "score": { "type": "number" },
          "bbox": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 4,
            "maxItems": 4
          },
          "keypoints": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "x", "y", "c"],
              "properties": {
                "name": { "type": "string" },
                "x": { "type": "number" },
                "y": { "type": "number" },
                "c": { "type": "number" }
              }
            }
          }
        }
      }
    }
  }
}
